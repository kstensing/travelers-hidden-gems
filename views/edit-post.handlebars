<article>
  <h1 style="text-align: center" class="text-light">Edit Post</h1>

  <div class="container">
    <div class="row d-flex mt-4 mb-5">

      <div class="col justify-content-center">
        <div class="card">
          <div class="card-header">
            <a href="post/{{post.id}}" class="text-decoration-none">
              <h5 class="post-title text-secondary">{{post.title}}</h5>
            </a>
          </div>
          <div class="card-body">
            <p class="card-text">{{post.contents}}</p>
          </div>
          <div class="post-byline">
            <span>by you on {{format_date post.created_at}} ({{timeSince post.created_at}}) |</span>
            <a href="/post/{{post.id}}">{{commentCount post.comments}}</a>
          </div>
          <div style="margin: 10px;">
            {{>map}}
          </div>
        </div>
      </div>

      <br />

      <form class="edit-post-form col">
        <div class="justify-content-center">
          <div class="card">
            <div class="card-header text-center">
              <label for="post-title">
                <h5 style="margin-right: 7px">Edit Title:</h5>
              </label>
              <input class="form-label" type="text" id="post-title" name="post-title" value="{{post.title}}" />
            </div>
            <div class="card-body text-center">
              <label for="content" class="col-12">
                <h5>Edit Post Content</h5>
              </label>
              <textarea style="width: 100%;" rows="6" class="form-textarea" id="content"
                name="content">{{post.contents}}</textarea>
            </div>
            <div class="text-center">
              <button type="submit" class="btn btn-primary m-2">Save Post</button>
              <button type="button" class="btn btn-danger delete-post-btn m-2">Delete Post</button>
            </div>
          </div>
        </div>
      </form>


    </div>


  </div>


</article>

<script src="/javascript/edit-post.js"></script>
<script src="/javascript/delete-post.js"></script>